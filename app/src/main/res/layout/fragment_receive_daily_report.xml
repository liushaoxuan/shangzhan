<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wyu.iwork.view.fragment.ReceiveDailyReportFragment">

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/daily_receive_refresh"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/daily_receive_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>

    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/daily_receive_notavaliable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350px"
        >
        <include layout="@layout/layout_list_notavailable"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>
