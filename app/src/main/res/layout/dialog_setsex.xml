<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="60dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_head_takephoto"
        android:text="@string/Sex"
        android:padding="10dp"
        android:textColor="@color/md_grey_900"
        android:textSize="18dp"
        android:background="@drawable/rect_white_top_cornes"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_300"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_setSex_Man"
        android:text="@string/Man"
        android:padding="10dp"
        android:textColor="@color/txt_blue"
        android:background="@color/txt_white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_300"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_setSex_Woman"
        android:text="@string/Woman"
        android:padding="10dp"
        android:textColor="@color/txt_blue"
        android:background="@color/txt_white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_300"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_white_bottom_cornes"
        android:text="@string/Cancel"
        android:padding="10dp"
        android:textColor="@color/txt_grey"
        android:id="@+id/dialog_setSex_Cancel"/>

</LinearLayout>
