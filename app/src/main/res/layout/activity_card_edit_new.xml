<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_edit_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.CardEditNewActivity"
    android:background="@color/colorF4F9FC">

    <include layout="@layout/custom_back_toolbar" android:id="@+id/toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/toolbar">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="356px"
                android:background="@mipmap/bg_edit"
                android:layout_below="@id/toolbar"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="36px"
                android:background="@drawable/shadow_155459">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="56px"
                    android:gravity="center_horizontal"
                    >

                    <View
                        android:layout_width="57px"
                        android:layout_height="1px"
                        android:background="@color/color25b0ff"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"/>

                    <View
                        android:layout_width="11px"
                        android:layout_height="11px"
                        android:background="@drawable/bg_25b0ff_30px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="个人信息"
                        android:textSize="28px"
                        android:layout_marginLeft="24px"
                        android:layout_marginRight="24px"
                        android:textColor="@color/colorGray333333"
                        />

                    <View
                        android:layout_width="11px"
                        android:layout_height="11px"
                        android:background="@drawable/bg_25b0ff_30px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="24px"/>

                    <View
                        android:layout_width="57px"
                        android:layout_height="1px"
                        android:background="@color/color25b0ff"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"/>

                </com.zhy.autolayout.AutoLinearLayout>
                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="34px"/>

                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_below="@id/main_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="36px"
                android:background="@drawable/shadow_155459"
                android:layout_marginBottom="30px">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="56px"
                    android:gravity="center_horizontal"
                    >

                    <View
                        android:layout_width="57px"
                        android:layout_height="1px"
                        android:background="@color/color25b0ff"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"/>

                    <View
                        android:layout_width="11px"
                        android:layout_height="11px"
                        android:background="@drawable/bg_25b0ff_30px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="公司信息"
                        android:textSize="28px"
                        android:layout_marginLeft="24px"
                        android:layout_marginRight="24px"
                        android:textColor="@color/colorGray333333"
                        />

                    <View
                        android:layout_width="11px"
                        android:layout_height="11px"
                        android:background="@drawable/bg_25b0ff_30px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="24px"/>

                    <View
                        android:layout_width="57px"
                        android:layout_height="1px"
                        android:background="@color/color25b0ff"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"/>

                </com.zhy.autolayout.AutoLinearLayout>
                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="34px"/>

                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <com.wyu.iwork.widget.EditCardItem
                    android:id="@+id/edit_address"
                    android:paddingBottom="58px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

    </ScrollView>

</RelativeLayout>
