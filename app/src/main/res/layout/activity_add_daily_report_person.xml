<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_daily_report_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wyu.iwork.view.activity.AddDailyReportPersonActivity"
    android:background="@color/white"
    android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="@color/colorCustomToolbar"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加人员"
                    android:textColor="@color/white"
                    android:textSize="36px"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="取消"
                    android:textSize="30px"
                    android:padding="32px"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="确定"
                    android:padding="30px"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:gravity="center_vertical"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <EditText
            android:id="@+id/et_search"
            android:layout_height="60px"
            android:layout_width="match_parent"
            android:background="@mipmap/search_kuang"
            android:drawableLeft="@mipmap/search"
            android:paddingLeft="16px"
            android:paddingTop="13px"
            android:paddingBottom="13px"
            android:drawablePadding="20px"
            android:layout_marginTop="25px"
            android:layout_marginBottom="25px"
            android:layout_marginRight="23px"
            android:layout_marginLeft="23px"
            android:hint="请输入您要搜索联系人"
            android:gravity="center_vertical"
            android:textSize="30px"
            android:textColorHint="@color/colorGrayD1D1D1"/>

        <ListView
            android:id="@+id/lv_person"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:divider="@color/colorGrayD2D2D2"
            android:dividerHeight="2px"
            android:scrollbars="none"/>


</com.zhy.autolayout.AutoLinearLayout>
