<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="36px"
              android:paddingRight="36px"
              android:paddingLeft="36px"
              android:background="@drawable/shadow_94453">

    <TextView
        android:id="@+id/card_avatar"
        android:layout_width="89px"
        android:layout_height="89px"
        android:background="@drawable/bg_65c7ff_30px"
        android:gravity="center"
        android:textSize="36px"
        android:textColor="@color/white"
        android:layout_marginBottom="36px"
        />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:textColor="@color/colorGray333333"
        android:layout_toRightOf="@id/card_avatar"
        android:paddingTop="7px"
        android:layout_marginLeft="37px"
        />

    <TextView
        android:id="@+id/card_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/card_avatar"
        android:layout_below="@id/card_name"
        android:paddingLeft="37px"
        android:textSize="28px"
        android:textColor="@color/colorGray9FABB2"
        android:paddingTop="22px"/>

    <ImageView
        android:id="@+id/card_delete"
        android:layout_width="50px"
        android:layout_height="50px"
        android:src="@mipmap/schedule_delete"
        android:layout_alignParentRight="true"/>

    <View
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayDFEAF1"
        android:layout_below="@id/card_avatar"/>

    <TextView
        android:id="@+id/card_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="未填写"
        android:layout_below="@id/card_view"
        android:paddingTop="23px"
        android:paddingBottom="21px"
        android:drawableLeft="@mipmap/building"
        android:drawablePadding="24px"
        android:textSize="28px"
        android:textColor="@color/colorGray777777"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:maxLines="1"
        android:ellipsize="end"/>

</com.zhy.autolayout.AutoRelativeLayout>