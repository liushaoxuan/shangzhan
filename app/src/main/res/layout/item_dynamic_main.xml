<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_dynamic_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_dynamic_chose"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_dynamic_icon"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:src="@mipmap/head_icon_nodata"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/item_dynamic_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_dynamic_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/black2"
                    android:text=" "/>

                <TextView
                    android:id="@+id/item_dynamic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black4"
                    android:text=" "
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/item_dynamic_detail_right_bottom_arrow"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/arrow_bottom"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_dynamic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_color"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/item_dynamic_gonggao_icon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:visibility="gone"
                android:src="@mipmap/gonggao_icon"/>

            <TextView
                android:id="@+id/item_dynamic_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:singleLine="true"
                android:textSize="@dimen/sp_14"
                android:text=" "/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/item_dynamic_zan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/item_dynamic_zan"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/icon_zan_normal"/>

                <TextView
                    android:id="@+id/item_dynamic_zan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/blackb4"
                    android:text=" "/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_dynamic_comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/item_dynamic_comment"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/comment_icon"/>

                <TextView
                    android:id="@+id/item_dynamic_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text=" "/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray1"/>

    <View
        android:id="@+id/item_dynamic_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30" />

</LinearLayout>
