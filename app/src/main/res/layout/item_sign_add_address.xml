<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">

    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30px"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingRight="150px"
        android:paddingTop="28px"
        android:paddingLeft="26px"
        android:textColor="@color/colorGray333333"
        />

    <TextView
        android:id="@+id/address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24px"
        android:textColor="@color/colorGray9FABB2"
        android:layout_below="@id/address_name"
        android:paddingTop="21px"
        android:paddingLeft="26px"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingRight="150px"
        android:paddingBottom="24px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayDFEBF1"
        android:layout_below="@id/address_detail"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="120px"
        android:layout_height="85px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:paddingRight="45px"
        android:paddingLeft="20px"
        android:src="@mipmap/address_delete"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22px"/>



</com.zhy.autolayout.AutoRelativeLayout>