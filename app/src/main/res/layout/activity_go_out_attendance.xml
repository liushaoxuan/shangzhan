<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_go_out_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.GoOutAttendanceActivity">

    <include layout="@layout/custom_back_toolbar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出时间"
            android:textSize="32px"
            android:textColor="@color/colorGray333333"
            android:layout_marginLeft="25px"/>

        <TextView
            android:id="@+id/go_out_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text=""
            android:textColor="@color/colorGray9FABB2"
            android:textSize="30px"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/layout_bottom_line_cbd6dd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/go_address"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外出地点"
            android:textSize="32px"
            android:textColor="@color/colorGray333333"
            android:layout_marginLeft="25px"/>

        <TextView
            android:id="@+id/go_out_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorGray9FABB2"
            android:textSize="30px"
            android:gravity="center_horizontal"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/layout_bottom_line_cbd6dd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="530px"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText
            android:id="@+id/go_out_for"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="请输入外出事由......"
            android:text=""
            android:gravity="top"
            android:paddingBottom="36px"
            android:paddingTop="36px"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:lineSpacingExtra="10px"
            android:textColor="@color/colorGray333333"
            android:textColorHint="@color/colorGray9FABB2"
            android:textSize="32px"
            android:maxLength="60"
            android:background="@null"/>

        <ImageView
            android:id="@+id/takephoto"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="26px"
            android:layout_marginBottom="47px"
            android:src="@mipmap/goout_pic"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <include layout="@layout/layout_bottom_line_cbd6dd"/>
</com.zhy.autolayout.AutoLinearLayout>
