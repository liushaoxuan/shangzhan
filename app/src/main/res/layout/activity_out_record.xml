<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_out_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_item_eaeff3"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.OutRecordActivity">

    <include layout="@layout/custom_back_toolbar"/>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.bingoogolapple.refreshlayout.BGARefreshLayout
            android:id="@+id/record_refresh"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/record_recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/record_notavaliable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400px"
            >
            <include layout="@layout/layout_list_notavailable"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoFrameLayout>

</LinearLayout>
