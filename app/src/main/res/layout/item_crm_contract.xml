<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:orientation="horizontal"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/item_crm_custom"
                                     android:paddingTop="23px"
    >

    <View
        android:layout_width="6px"
        android:layout_height="match_parent"
        android:background="@drawable/bg_3cb3f1_left_round"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36px"
        android:paddingRight="26px"
        android:paddingLeft="34px"
        android:paddingBottom="36px"
        android:background="@drawable/bg_white_right_round">
        
        <TextView
            android:id="@+id/contract_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen3CB3F1"
            android:text="鼠标订单"
            android:textSize="32px"

            />
        
        <View
            android:id="@+id/contract_point"
            android:layout_width="13px"
            android:layout_height="13px"
            android:background="@drawable/point_3cb3f1"
            android:layout_below="@id/contract_name"
            android:layout_marginTop="28px"
            android:layout_marginLeft="3px"/>
        
        <TextView
            android:id="@+id/contract_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="林先生"
            android:textSize="24px"
            android:textColor="@color/colorGray666666"
            android:layout_below="@id/contract_name"
            android:layout_toRightOf="@id/contract_point"
            android:paddingLeft="25px"
            android:paddingTop="20px"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <com.chaychan.viewlib.NumberRunningTextView
                android:id="@+id/contract_money"
                android:textSize="36px"
                android:textColor="@color/colorGray999999"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="36px"
                android:textColor="@color/colorGray999999"
                android:layout_height="wrap_content"
                android:text="元"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>