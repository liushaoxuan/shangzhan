<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/item_crm_custom_potential"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="23px"
    >

    <View
        android:layout_width="6px"
        android:layout_height="match_parent"
        android:background="@drawable/bg_3cb3f1_left_round"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_right_round">

        <TextView
            android:id="@+id/tv_crm_custom_potential_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="37px"
            android:paddingLeft="30px"
            android:text=""
            android:textSize="32px"
            android:textColor="@color/colorGray404040"/>

        <TextView
            android:id="@+id/tv_crm_custom_potential_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_crm_custom_potential_name"
            android:text=""
            android:paddingTop="23px"
            android:paddingLeft="30px"
            android:textSize="24px"
            android:textColor="@color/colorGray999999"
            android:drawableLeft="@mipmap/crm_location"
            android:drawablePadding="11px"
            />

        <TextView
            android:id="@+id/tv_crm_follow_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟进人：小王"
            android:paddingTop="27px"
            android:paddingLeft="30px"
            android:textSize="26px"
            android:textColor="@color/colorGray666666"
            android:visibility="gone"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="29px"
            android:paddingLeft="30px"
            android:paddingBottom="34px"
            android:paddingRight="45px">

            <TextView
                android:id="@+id/tv_crm_custom_potential_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="26px"
                android:textColor="@color/colorGray666666"
                android:layout_below="@id/tv_crm_custom_potential_address"
                android:paddingRight="45px"/>

            <TextView
                android:id="@+id/tv_crm_custom_potential_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="30px"
                android:textSize="26px"
                android:textColor="@color/colorGray666666"
                android:layout_below="@id/tv_crm_custom_potential_address"
                android:layout_toRightOf="@id/tv_crm_custom_potential_time"
                />

        </com.zhy.autolayout.AutoRelativeLayout>



    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>