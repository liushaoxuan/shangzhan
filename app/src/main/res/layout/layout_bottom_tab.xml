<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px150">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px105"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/home_working"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center|bottom">

        <ImageView
            android:layout_width="@dimen/px98"
            android:layout_height="@dimen/px98"
            android:src="@drawable/selector_tab_work"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_tab_navi_menu"
            android:textSize="@dimen/px24"
            android:layout_marginTop="@dimen/px10"
            android:text="工作"
            android:layout_marginBottom="@dimen/px5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/home_working"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/home_application"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center|bottom">

            <ImageView
                android:layout_width="@dimen/px50"
                android:layout_height="@dimen/px50"
                android:src="@drawable/selector_tab_app"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tab_navi_menu"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:text="应用"
                android:layout_marginBottom="@dimen/px5"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/home_communicate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center|bottom">

            <ImageView
                android:layout_width="@dimen/px50"
                android:layout_height="@dimen/px50"
                android:src="@drawable/selector_tab_communication"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tab_navi_menu"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:text="交流"
                android:layout_marginBottom="@dimen/px5"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/home_working"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/home_dynamic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center|bottom">

            <ImageView
                android:layout_width="@dimen/px50"
                android:layout_height="@dimen/px50"
                android:src="@drawable/selector_tab_dynamic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tab_navi_menu"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:text="动态"
                android:layout_marginBottom="@dimen/px5"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/home_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center|bottom">

            <ImageView
                android:layout_width="@dimen/px50"
                android:layout_height="@dimen/px50"
                android:src="@drawable/selector_tab_my"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tab_navi_menu"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:text="我的"
                android:layout_marginBottom="@dimen/px5"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
