<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_personnal_infomation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ec"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.EditPersonnalInfomationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:id="@+id/activity_edit_personnal_infomation_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="@dimen/px24">
            <ImageView
                android:layout_width="@dimen/px18"
                android:layout_height="@dimen/px30"
                android:src="@mipmap/arrow_left"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/px15"
                android:layout_centerVertical="true"
                android:text="返回"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_10"
            style="@style/AppTheme.TextAppearance.Toolbar.Title"
            android:text="@string/title_edit_info"/>

        <TextView
            android:id="@+id/activity_edit_personnal_infomation_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px25"
            android:padding="@dimen/px10"
            android:textSize="@dimen/px30"
            android:text="@string/save"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/activity_edit_personnal_infomation_change_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:paddingLeft="@dimen/px25"
                android:background="@color/white"
                android:paddingRight="@dimen/px28">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:layout_centerVertical="true"
                    android:text="@string/change_head_icon"/>
                <ImageView
                    android:layout_width="@dimen/px16"
                    android:layout_height="@dimen/px_29"
                    android:src="@mipmap/right_arow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_edit_personnal_infomation_head"
                    android:layout_width="@dimen/px90"
                    android:layout_height="@dimen/px90"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px45"
                    android:src="@mipmap/head_icon_nodata"/>
            </RelativeLayout>

            <!--name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px1"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/Name"/>

                <EditText
                    android:id="@+id/activity_edit_personnal_infomation_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/px72"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/please_input"/>

            </LinearLayout>

            <!--phone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px50"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/Phone"/>

                <TextView
                    android:id="@+id/activity_edit_personnal_infomation_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/px72"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:maxLength="20"
                    android:hint="@string/please_input"/>

            </LinearLayout>
            <!--email-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px1"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/Mail"/>

                <EditText
                    android:id="@+id/activity_edit_personnal_infomation_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/px72"
                    android:gravity="right|center_vertical"
                    android:inputType="textEmailAddress"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/please_input"/>

            </LinearLayout>
            <!--wechat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px1"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/Wechat"/>

                <EditText
                    android:id="@+id/activity_edit_personnal_infomation_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/px72"
                    android:inputType="textEmailAddress"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/please_input"/>

            </LinearLayout>

            <!--position-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px50"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/Job"/>

                <TextView
                    android:id="@+id/activity_edit_personnal_infomation_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/px72"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/Job"/>

            </LinearLayout>
            <!--company-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px1"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/company"/>

                <TextView
                    android:id="@+id/activity_edit_personnal_infomation_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/px72"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/company"/>

            </LinearLayout>

            <!--depart-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px1"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/Department"/>

                <TextView
                    android:id="@+id/activity_edit_personnal_infomation_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/px72"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/Department"/>

            </LinearLayout>

            <!--location-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/px100"
                android:layout_marginTop="@dimen/px50"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="@dimen/px28"
                android:paddingLeft="@dimen/px25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/px32"
                    android:text="@string/organz_addr"/>

                <EditText
                    android:id="@+id/activity_edit_personnal_infomation_addr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_9fabb2"
                    android:textSize="@dimen/px30"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/px72"
                    android:hint="@string/please_input"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
