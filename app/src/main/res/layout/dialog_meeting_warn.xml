<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:id="@+id/ly_myinfo_changedate"
              android:background="#00000000">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ly_myinfo_changedate_child"
        android:layout_width="540px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_round_rectangle">

        <TextView
            android:id="@+id/tv_title"
            android:layout_height="90px"
            android:layout_width="match_parent"
            android:background="@drawable/bg_green257eff_round_rectabgle"
            android:text="郭德纲 发起了一个会议"
            android:textSize="30px"
            android:textColor="@color/white"
            android:gravity="center"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="60px"
            android:layout_marginRight="48px"
            android:layout_marginLeft="53px">

            <ImageView
                android:id="@+id/imageview_my"
                android:layout_height="65px"
                android:layout_width="65px"
                android:src="@mipmap/icon02"/>

            <TextView
                android:id="@+id/tv_time"
                android:text="会议将于2月28日13:42在会议室1开始！"
                android:textSize="32px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray3B3B3B"
                android:layout_marginLeft="28px"/>



        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/colorGrayDCDCDC"
            android:layout_marginTop="54px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="30px"
                android:gravity="center"
                android:layout_marginTop="33px"
                android:layout_marginBottom="29px"
                android:textColor="@color/colorGreen5397FF"/>

            <View
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/colorGrayDCDCDC"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="30px"
                android:gravity="center"
                android:layout_marginTop="33px"
                android:layout_marginBottom="29px"
                android:textColor="@color/colorGray969696"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>