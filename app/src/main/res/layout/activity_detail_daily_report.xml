<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_daily_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.DetailDailyReportActivity"
    android:background="@color/colorF4F9FC">

    <include layout="@layout/custom_back_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32px"
                android:background="@color/white">

                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="88px"
                    android:layout_height="88px">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_imageview"
                        android:layout_width="88px"
                        android:layout_height="88px"
                        />

                    <TextView
                        android:id="@+id/daily_report_avatar"
                        android:layout_width="88px"
                        android:layout_height="88px"
                        android:textSize="34px"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_rect_4fc9ff"
                        />


                </FrameLayout>


                <TextView
                    android:id="@+id/daily_report_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/framelayout"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="8px"
                    android:textColor="@color/colorGray333333"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/daily_time_position"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/framelayout"
                    android:layout_below="@id/daily_report_name"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="18px"
                    android:textSize="24px"
                    android:textColor="@color/colorGray333333"/>

            </com.zhy.autolayout.AutoRelativeLayout>
            <include layout="@layout/layout_bottom_line"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                android:background="@color/white"
                android:orientation="vertical">

                <include layout="@layout/layout_bottom_line"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="今日完成工作"
                    android:textSize="32px"
                    android:paddingTop="33px"
                    android:paddingLeft="25px"
                    android:textColor="@color/colorGray333333"/>

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_height="200px"
                    android:layout_width="match_parent"
                    android:hint="未填写"
                    android:padding="26px"
                    android:lineSpacingExtra="10px"
                    android:textColor="@color/color4D7186"
                    android:textColorHint="@color/colorGray9FABB2"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <include layout="@layout/layout_bottom_line"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="23px"
                android:background="@color/white"
               >

                <include layout="@layout/layout_bottom_line"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="未完成工作"
                    android:textSize="32px"
                    android:paddingTop="33px"
                    android:paddingLeft="25px"
                    android:textColor="@color/colorGray333333"/>

                <TextView
                    android:id="@+id/tv_undo"
                    android:layout_height="200px"
                    android:layout_width="match_parent"
                    android:hint="未填写"
                    android:padding="26px"
                    android:lineSpacingExtra="10px"
                    android:textColorHint="@color/colorGray9FABB2"
                    android:textColor="@color/color4D7186"
                    android:textSize="30px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <include layout="@layout/layout_bottom_line"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="23px"
                android:background="@color/white"
                >

                <include layout="@layout/layout_bottom_line"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="需协调工作"
                    android:textSize="32px"
                    android:paddingTop="33px"
                    android:paddingLeft="25px"
                    android:textColor="@color/colorGray333333"/>

                <TextView
                    android:id="@+id/tv_coordinate"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="未填写"
                    android:textColorHint="@color/colorGray9FABB2"
                    android:textColor="@color/color4D7186"
                    android:textSize="30px"
                    android:singleLine="true"
                    android:layout_marginTop="29px"
                    android:paddingLeft="26px"
                    android:paddingBottom="40px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <include layout="@layout/layout_bottom_line"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="23px"
                android:background="@color/white"
                >

                <include layout="@layout/layout_bottom_line"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="备注"
                    android:textSize="32px"
                    android:paddingTop="33px"
                    android:paddingLeft="25px"
                    android:textColor="@color/colorGray333333"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="未填写"
                    android:textColorHint="@color/colorGray9FABB2"
                    android:textColor="@color/color4D7186"
                    android:textSize="30px"
                    android:singleLine="true"
                    android:layout_marginTop="29px"
                    android:paddingLeft="26px"
                    android:paddingBottom="40px"/>


            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
