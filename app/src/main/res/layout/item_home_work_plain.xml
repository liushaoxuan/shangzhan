<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105px"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:id="@+id/item_home_work_view"
    android:paddingLeft="@dimen/px85">

    <TextView
        android:id="@+id/item_home_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black6"
        android:textSize="@dimen/px30"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/px60"
        android:layout_marginLeft="@dimen/px94"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:id="@+id/item_home_work_upline"
            android:layout_width="@dimen/px2"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ececee"/>

        <RelativeLayout
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40">

            <View
                android:layout_width="@dimen/px1"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#ececee"/>
            <ImageView
                android:id="@+id/item_home_work_imageview"
                android:layout_width="@dimen/px24"
                android:layout_height="@dimen/px24"
                android:layout_centerInParent="true"
                android:src="@mipmap/home_work_plain_icon"/>

            <ImageView
                android:id="@+id/item_home_work_imageview_"
                android:layout_width="@dimen/px40"
                android:layout_height="@dimen/px40"
                android:layout_centerInParent="true"
                android:src="@mipmap/home_work_plain_icon_select"/>
        </RelativeLayout>

        <View
            android:id="@+id/item_home_work_dwonline"
            android:layout_width="@dimen/px2"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ececee"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_home_work_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/black6"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/px24"
        android:textSize="@dimen/px30"
        android:text=""/>



    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px40"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20"
        android:layout_marginRight="@dimen/px24"
        android:background="@drawable/orange_color_round_rect">
        <TextView
            android:id="@+id/child_item_home_work_schedule_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/px24"
            android:layout_centerInParent="true"
            android:text=""/>
    </RelativeLayout>


</LinearLayout>
