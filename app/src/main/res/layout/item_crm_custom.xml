<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_crm_custom"
              android:paddingTop="23px"
            >

    <View
        android:layout_width="6px"
        android:layout_height="match_parent"
        android:background="@drawable/bg_3cb3f1_left_round"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_right_round">




        <TextView
            android:id="@+id/tv_item_crm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="32px"
            android:paddingRight="300px"
            android:textColor="@color/colorGray404040"
            android:paddingTop="38px"
            android:paddingLeft="30px"
            android:layout_marginLeft="6px"
            />

        <TextView
            android:id="@+id/tv_item_crm_address"
            android:layout_below="@id/tv_item_crm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24px"
            android:textColor="@color/colorGray999999"
            android:paddingTop="23px"
            android:paddingLeft="37px"
            android:drawablePadding="11px"
            android:drawableLeft="@mipmap/crm_location"
            android:paddingBottom="30px"
            android:layout_marginLeft="6px"/>

        <ImageView
            android:id="@+id/iv_item_crm_phone"
            android:layout_width="123px"
            android:layout_height="134px"
            android:src="@mipmap/crm_phone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110px"
            android:paddingRight="40px"
            android:paddingLeft="50px"
            android:paddingBottom="50px"
            android:paddingTop="50px"/>

        <ImageView
            android:id="@+id/iv_item_crm_message"
            android:layout_width="111px"
            android:layout_height="134px"
            android:src="@mipmap/crm_message"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="50px"
            android:paddingBottom="50px"
            android:paddingTop="50px"
            android:paddingLeft="25px"
            />


    </com.zhy.autolayout.AutoRelativeLayout>




</com.zhy.autolayout.AutoLinearLayout>