<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_corner_bg_20">

    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="@dimen/px77"
        android:layout_height="@dimen/px77"
        android:layout_marginLeft="@dimen/px40"
        android:layout_marginTop="@dimen/px76"
        android:src="@drawable/dialog_true"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black3"
        android:textSize="@dimen/px32"
        android:singleLine="true"
        android:layout_marginTop="@dimen/px74"
        android:layout_marginRight="@dimen/px24"
        android:layout_toRightOf="@id/dialog_icon"
        android:layout_marginLeft="@dimen/px30"
        android:text=""/>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_9fabb2"
        android:textSize="@dimen/px26"
        android:layout_marginRight="@dimen/px25"
        android:layout_marginTop="@dimen/px20"
        android:layout_toRightOf="@id/dialog_icon"
        android:layout_below="@id/dialog_title"
        android:layout_marginLeft="@dimen/px30"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_content"
        android:layout_marginTop="@dimen/px60"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="#DFEBF1"/>


    <LinearLayout
        android:id="@+id/dialog_true_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px30"
            android:text="我知道了"
            android:gravity="center_horizontal"
            android:textColor="@color/blue"
            android:id="@+id/dialog_true_I_know" />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_flase_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_false_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/px30"
                android:text="取消"
                android:gravity="center_horizontal"
                android:textColor="@color/black9"/>
            <View
                android:layout_width="@dimen/px1"
                android:layout_height="match_parent"
                android:background="#DFEBF1"/>
            <TextView
                android:id="@+id/dialog_false_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/px30"
                android:text="确定"
                android:gravity="center_horizontal"
                android:textColor="@color/blue"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
