<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:id="@+id/ly_myinfo_changedate"
                                       android:background="#00000000"
                                       android:gravity="bottom">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ly_myinfo_changedate_child"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_sure"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="确定"
            android:textColor="@color/colorCustomToolbar"
            android:gravity="right"
            android:textSize="36px"
            android:paddingBottom="34px"
            android:paddingTop="34px"
            android:paddingRight="50px"
            android:paddingLeft="50px"
            android:background="@color/colorGrayECECEC"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:background="@color/white">

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/colorGrayBFBFBF"
                android:layout_marginTop="125px"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/colorGrayBFBFBF"
                android:layout_marginBottom="125px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="center_vertical">

                <com.wyu.iwork.wheeldate.WheelView
                    android:id="@+id/wv_date_min"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#DCDCDC"/>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>