<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabGroup"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorCustomToolbar">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="36px"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/fragment_work_zxing_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/scan_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textSize="18px"
                android:layout_marginTop="8px"
                android:textColor="@color/colorGrayFAFAFA"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/fragment_work_watting_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingRight="24px"
            android:visibility="invisible"
            >
            <ImageView
                android:layout_width="40px"
                android:layout_height="50px"
                android:src="@mipmap/watiing_do_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待办"
                android:textSize="18px"
                android:layout_marginTop="8px"
                android:textColor="@color/colorGrayFAFAFA"/>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>