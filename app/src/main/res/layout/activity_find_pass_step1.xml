<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f4f9fc"
    android:orientation="vertical">
    <include layout="@layout/layout_erp_edit_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px28"
            android:textColor="#9FACB2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px26"
            android:text="继续找回密码"/>
    </LinearLayout>



    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px30"
            android:textColor="@color/black3"
            android:layout_marginLeft="@dimen/px40"
            android:text="新的密码"/>
        <View
            android:layout_width="@dimen/px2"
            android:layout_height="@dimen/px48"
            android:layout_marginLeft="@dimen/px40"
            android:background="#E0EBF1"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textColor="@color/black6"
            android:textSize="@dimen/px30" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/only_for_findpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96"
            android:gravity="center_vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:textColor="@color/black3"
                android:layout_marginLeft="@dimen/px40"
                android:text="确认密码"/>

            <View
                android:layout_width="@dimen/px2"
                android:layout_height="@dimen/px48"
                android:layout_marginLeft="@dimen/px40"
                android:background="#E0EBF1"/>
            <EditText
                android:id="@+id/et_password_too"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px48"
                android:background="@null"
                android:hint="请再次输入您的密码"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:textColor="@color/black6"
                android:textSize="@dimen/px30" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_complete_sumbmit"
        android:layout_height="@dimen/px88"
        android:layout_width="match_parent"
        android:layout_marginTop="100px"
        android:background="@drawable/bg_login_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="36px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:gravity="center"/>

</LinearLayout>
