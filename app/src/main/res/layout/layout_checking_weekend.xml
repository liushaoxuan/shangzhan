<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorE3F3FF">

    <ImageView
        android:id="@+id/weekend_pic"
        android:layout_width="393px"
        android:layout_height="259px"
        android:src="@mipmap/checking_weekend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="今天是周末哦"
        android:textSize="30px"
        android:textColor="@color/color25b0ff"
        android:layout_below="@id/weekend_pic"
        android:paddingTop="96px"
        android:paddingBottom="75px"/>

</com.zhy.autolayout.AutoRelativeLayout>