<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crm_custom_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.CrmCustomDetailActivity">

    <include layout="@layout/custom_back_toolbar"/>

    <ScrollView
        android:id="@+id/activity_crm_custom_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_name"
                android:layout_marginTop="23px"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_resource"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_level"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_state"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_phone"
                android:layout_marginTop="23px"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_address"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_detail_address"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_fax"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_mail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_website"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_money"
                android:layout_marginTop="23px"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_followup"
                android:layout_marginTop="23px"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/crm_custom_remark"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/crm_custom_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存"
                android:gravity="center"
                android:layout_marginTop="80px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginBottom="60px"
                android:padding="28px"
                android:textSize="36px"
                android:textColor="@color/white"
                android:background="@drawable/bg_257eff_round_rect"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
