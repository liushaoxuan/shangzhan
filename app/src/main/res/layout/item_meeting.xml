<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:orientation="vertical"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@color/white">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="131px">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_height="91px"
            android:layout_width="91px"
            android:src="@mipmap/def_img_rect"
            android:layout_centerVertical="true"
            android:layout_marginLeft="31px"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv_red_point"
            android:layout_height="19px"
            android:layout_width="19px"
            android:src="@mipmap/red_dian"
            android:layout_marginTop="10px"
            android:layout_marginLeft="116px"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorGray333333"
            android:textSize="30px"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_marginTop="26px"
            android:layout_marginLeft="24px"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingRight="126px"
            android:textColor="@color/colorGray777777"
            android:textSize="26px"
            android:layout_toRightOf="@id/iv_avatar"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="14px"
            android:layout_marginLeft="24px"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorGray777777"
            android:textSize="20px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30px"
            android:layout_marginRight="32px"/>


    </com.zhy.autolayout.AutoRelativeLayout>>



</com.zhy.autolayout.AutoRelativeLayout>