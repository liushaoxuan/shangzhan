<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f9fc"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/px160"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px30"
            android:gravity="center"
            android:textColor="@color/black3"
            android:text="手机号"/>

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="@dimen/px48"
            android:background="#E0EBF1"/>
        <EditText
            android:id="@+id/et_telnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical"
            android:maxLength="11"
            android:hint="请输入手机号"
            android:textColor="@color/black3"
            android:textSize="@dimen/px30" />


        <ImageView
            android:id="@+id/phone_del"
            android:layout_width="76px"
            android:layout_height="76px"
            android:padding="23px"
            android:visibility="invisible"
            android:src="@mipmap/sign_in_del" />
        <Button
            android:id="@+id/tv_getcode"
            android:layout_width="168px"
            android:layout_height="@dimen/px48"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textSize="@dimen/px24"
            android:textColor="@color/white"
            android:background="@drawable/bg_c8c8c8_round_rect"
            android:layout_marginRight="24px"/>
    </LinearLayout>

    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/px160"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px30"
            android:paddingLeft="@dimen/px40"
            android:textColor="@color/black3"
            android:text="验证码    "/>
        <View
            android:layout_width="@dimen/px1"
            android:layout_height="@dimen/px48"
            android:background="#E0EBF1"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:maxLength="8"
            android:gravity="center_vertical"
            android:textColor="@color/black3"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/px30" />

        <ImageView
            android:id="@+id/code_del"
            android:layout_width="76px"
            android:layout_height="76px"
            android:padding="23px"
            android:visibility="invisible"
            android:src="@mipmap/sign_in_del" />

        <Button
            android:layout_width="195px"
            android:layout_height="@dimen/px60"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/px16"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:background="@drawable/bg_c8c8c8_round_rect"
            android:layout_marginRight="24px"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_next_step"
        android:layout_height="@dimen/px88"
        android:layout_width="match_parent"
        android:layout_marginTop="100px"
        android:background="@drawable/find_pass_cant_sclick"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="36px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:gravity="center"/>
</LinearLayout>
