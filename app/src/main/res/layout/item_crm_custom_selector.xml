<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_crm_custom"
              android:paddingTop="23px"
            >

    <View
        android:layout_width="6px"
        android:layout_height="match_parent"
        android:background="@drawable/bg_3cb3f1_left_round"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_right_round">




        <TextView
            android:id="@+id/tv_item_crm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:paddingRight="300px"
            android:textColor="@color/colorGray404040"
            android:paddingTop="38px"
            android:paddingLeft="30px"
            android:layout_marginLeft="6px"/>

        <TextView
            android:id="@+id/tv_item_crm_address"
            android:layout_below="@id/tv_item_crm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24px"
            android:textColor="@color/colorGray999999"
            android:paddingTop="23px"
            android:paddingLeft="37px"
            android:drawablePadding="11px"
            android:drawableLeft="@mipmap/crm_location"
            android:paddingBottom="30px"
            android:layout_marginLeft="6px"/>


        <TextView
            android:id="@+id/iv_item_crm_select"
            android:layout_width="45px"
            android:layout_height="45px"
            android:background="@drawable/crm_potential_custom_selector"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="53px"
            />


    </com.zhy.autolayout.AutoRelativeLayout>




</com.zhy.autolayout.AutoLinearLayout>