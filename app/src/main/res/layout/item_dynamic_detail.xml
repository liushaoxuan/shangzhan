<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:id="@+id/item_dynamic_detail_parent"
    android:background="@color/bg_ec">

    <TextView
        android:id="@+id/item_dynamic_detail_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px26"
        android:textColor="@color/dynamic_releaser_color"
        android:text="阿拉蕾:"/>
    <LinearLayout
        android:id="@+id/item_dynamic_detail_reply_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px10"
            android:textColor="@color/black6"
            android:text="回复"/>
        <TextView
            android:id="@+id/item_dynamic_detail_userName_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/dynamic_releaser_color"
            android:text="阿拉蕾:"/>
    </LinearLayout>


    <TextView
        android:id="@+id/item_dynamic_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px26"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black6"
        android:text="调查不错吧"/>
</LinearLayout>
