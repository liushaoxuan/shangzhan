<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px37"
    android:paddingRight="@dimen/px24">

    <!--账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:layout_marginTop="@dimen/px15"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px32"
            android:layout_height="@dimen/px48"
            android:layout_marginLeft="@dimen/px16"
            android:src="@mipmap/write02" />


        <EditText
            android:id="@+id/et_telnum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical"
            android:hint="请输入您的手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/px30" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayB4B4B4"/>
    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px32"
            android:layout_height="@dimen/px48"
            android:layout_marginLeft="@dimen/px16"
            android:src="@mipmap/yanzheng" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:maxLength="8"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/px30" />

        <Button
            android:id="@+id/tv_getcode"
            android:layout_width="195px"
            android:layout_height="@dimen/px60"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textSize="@dimen/px28"
            android:textColor="#333333"
            android:background="@drawable/bg_c8c8c8_round_rect"
            android:layout_marginRight="24px"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayB4B4B4"/>
    <!--姓名-->
    <LinearLayout
        android:id="@+id/only_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px32"
            android:layout_height="@dimen/px48"
            android:layout_marginLeft="@dimen/px16"
            android:src="@mipmap/data" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/px30" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayB4B4B4"/>
    </LinearLayout>
    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/px32"
            android:layout_height="@dimen/px48"
            android:layout_marginLeft="@dimen/px16"
            android:src="@mipmap/account02" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px48"
            android:background="@null"
            android:hint="密码为6-20位数字或字母"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/px30" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayB4B4B4"/>

    <LinearLayout
        android:id="@+id/only_for_findpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px108"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/px32"
                android:layout_height="@dimen/px48"
                android:layout_marginLeft="@dimen/px16"
                android:src="@mipmap/account02" />


            <EditText
                android:id="@+id/et_password_too"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px48"
                android:background="@null"
                android:hint="请再次输入您的密码"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/px30" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrayB4B4B4"/>
    </LinearLayout>

</LinearLayout>
