<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_mine_1_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px140"
        android:layout_marginBottom="@dimen/px20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px20"
        android:paddingRight="@dimen/px30"
        android:paddingLeft="@dimen/px48"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_mine_image_1"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:layout_centerVertical="true"
            android:src="@mipmap/company" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_mine_image_1"
            android:layout_marginLeft="62px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_mine_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/My_community"
                android:textColor="@color/black3"
                android:textSize="@dimen/px34" />

            <TextView
                android:id="@+id/item_mine_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/My_community_Remarks"
                android:textColor="@color/black6"
                android:textSize="@dimen/px30" />

        </LinearLayout>

        <ImageView
            android:layout_width="16px"
            android:layout_height="@dimen/px30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_right" />

    </RelativeLayout>


    <!---->


    <RelativeLayout
        android:id="@+id/item_mine_namelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px24"
        android:paddingRight="@dimen/px30">

        <ImageView
            android:id="@+id/item_mine_image"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_marginRight="@dimen/px60"
            android:layout_centerVertical="true"
            android:src="@mipmap/me" />

        <TextView
            android:id="@+id/item_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/My_data"
           android:layout_centerVertical="true"
            android:textColor="@color/black3"
            android:layout_toRightOf="@id/item_mine_image"
            android:textSize="@dimen/px34" />

        <ImageView
            android:layout_width="16px"
            android:layout_height="@dimen/px30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white">
        <View
            android:id="@+id/item_mine_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginLeft="@dimen/px24"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

<View
    android:id="@+id/item_mine_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px20"
    android:background="@color/app_background"/>

</LinearLayout>
