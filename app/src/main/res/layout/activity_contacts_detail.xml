<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contacts_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_ec"
    tools:context="com.wyu.iwork.view.activity.ContactsDetailActivity">

    <include layout="@layout/layout_erp_edit_title"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px236"
        android:background="@color/blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/px35"
        android:layout_marginLeft="@dimen/px24"
        android:layout_marginRight="@dimen/px24"
        android:layout_height="377px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:background="@drawable/shadow_detail_info">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_contacts_detail_userHead"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/px32"/>

        <ImageView
            android:id="@+id/activity_contacts_detail_share"
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px70"
            android:padding="@dimen/px10"
            android:src="@drawable/icon_contacts_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px50"
            android:layout_marginBottom="@dimen/px42"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/activity_contacts_detail_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未命名"
            android:textColor="@color/black3"
            android:textSize="@dimen/px40"
            android:layout_marginTop="43px"
            android:layout_marginLeft="@dimen/px45"/>

        <TextView
            android:id="@+id/activity_contacts_detail_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称"
            android:textColor="#2097DB"
            android:textSize="@dimen/px28"
            android:singleLine="true"
            android:layout_marginTop="34px"
            android:layout_below="@id/activity_contacts_detail_userName"
            android:layout_toLeftOf="@id/activity_contacts_detail_userHead"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px45"/>

        <TextView
            android:id="@+id/activity_contacts_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textColor="@color/black3"
            android:textSize="@dimen/px28"
            android:singleLine="true"
            android:layout_marginTop="50px"
            android:layout_below="@id/activity_contacts_detail_company_name"
            android:layout_toLeftOf="@id/activity_contacts_detail_share"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px45"/>

        <TextView
            android:id="@+id/activity_contacts_detail_work_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作邮箱："
            android:textColor="@color/black3"
            android:textSize="@dimen/px28"
            android:singleLine="true"
            android:layout_marginTop="20px"
            android:layout_below="@id/activity_contacts_detail_phone"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px45"/>

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

    <Button
        android:id="@+id/activity_contacts_detail_sendmessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:background="@drawable/bg_login_normal"
        android:textSize="@dimen/px36"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/px77"
        android:layout_marginLeft="@dimen/px24"
        android:layout_marginRight="@dimen/px24"
        android:elevation="@dimen/px2"
        android:text="发送消息"/>

    <Button
        android:id="@+id/activity_contacts_detail_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:background="@drawable/stoke_white_bg"
        android:textSize="@dimen/px36"
        android:textColor="@color/black3"
        android:layout_marginTop="@dimen/px48"
        android:layout_marginLeft="@dimen/px24"
        android:layout_marginRight="@dimen/px24"
        android:text="拨打电话"/>

</LinearLayout>
