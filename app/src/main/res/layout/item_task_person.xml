<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:orientation="vertical"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:weightSum="1">

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30px"
        android:textColor="@color/colorGray333333"
        android:gravity="center_vertical"
        android:paddingLeft="34px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_height="131px"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="23px">

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="37px"
            android:layout_height="37px"
            android:background="@drawable/selector_schedule_person"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/iv_avatar"
            android:layout_height="91px"
            android:layout_width="91px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_rect_4fc9ff"
            android:layout_marginLeft="29px"
            android:text=""
            android:textSize="36px"
            android:gravity="center"
            android:textColor="@color/white"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30px"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="30px"
                android:paddingTop="25px"
                android:textColor="@color/colorGray333333"
                />

            <TextView
                android:id="@+id/tv_telphone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="@color/colorGray666666"
                android:textSize="28px"
                android:paddingTop="13px"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>