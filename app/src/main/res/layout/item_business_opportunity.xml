<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="24px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px">

            <com.wyu.iwork.widget.CircleProgressBar
                android:id="@+id/oppoptunity_circleprogress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/opportunity_image"
                android:visibility="gone"/>

        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/opportunity_title"
                android:layout_width="330px"
                android:layout_height="wrap_content"
                android:text="好的商机"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorGray333333"
                android:textSize="30px"
                android:paddingTop="30px"/>

            <TextView
                android:id="@+id/opportunity_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/opportunity_title"
                android:textSize="28px"
                android:textColor="@color/colorGray666666"

                android:paddingTop="27px"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="100px"
                />


            <TextView
                android:id="@+id/opportunity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/colorGray999999"
                android:layout_alignParentRight="true"
                android:paddingRight="28px"
                android:paddingTop="38px"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28px"
                android:layout_below="@id/opportunity_company"
                >

                <TextView
                    android:id="@+id/oppoprunity_stage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/opportunity_company"
                    android:textSize="24px"
                    android:textColor="@color/colorGray666666"
                    android:text=""
                    android:paddingTop="20px"/>

                <TextView
                    android:id="@+id/opportunity_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/opportunity_company"
                    android:layout_toRightOf="@id/oppoprunity_stage"
                    android:background="@drawable/bg_3faaff_round_90"
                    android:text="需求确定"
                    android:textSize="24px"
                    android:textColor="@color/colorGreen3FAAFF"
                    android:paddingRight="20px"
                    android:paddingLeft="20px"
                    android:paddingTop="6px"
                    android:paddingBottom="6px"
                    android:layout_marginTop="15px"
                    android:layout_marginLeft="23px"/>

                <TextView
                    android:id="@+id/yuan"
                    android:layout_width="wrap_content"
                    android:textSize="36px"
                    android:textColor="@color/colorGray999999"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15px"
                    android:paddingRight="26px"
                    android:text="元"/>

                <com.chaychan.viewlib.NumberRunningTextView
                    android:id="@+id/oppoptunity_money"
                    android:textSize="36px"
                    android:textColor="@color/colorGray999999"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@id/yuan"
                    android:layout_marginTop="15px"
                    android:maxLines="1"
                    />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>