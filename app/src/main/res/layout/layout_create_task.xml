<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">

    <include layout="@layout/layout_bottom_line" android:id="@+id/top_line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="紧急程度"
            android:textSize="32px"
            android:textColor="@color/colorGray333333"
            android:layout_centerVertical="true"
            android:paddingLeft="26px"/>

        <ImageView
            android:id="@+id/right"
            android:layout_width="16px"
            android:layout_height="29px"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"/>

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="未设置"
            android:layout_toLeftOf="@id/right"
            android:layout_centerVertical="true"
            android:paddingRight="16px"
            android:textSize="30px"
            android:paddingLeft="200px"
            android:textColor="@color/color4D7186"
            android:textColorHint="@color/colorGray9FABB2"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/layout_bottom_line" android:id="@+id/bottom_line"/>

</com.zhy.autolayout.AutoLinearLayout>