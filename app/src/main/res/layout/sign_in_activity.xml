<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="243px"
                    android:layout_height="226px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0px"
                    android:src="@mipmap/logo_sign_in" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px96"
                    android:layout_marginTop="@dimen/px132"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px45"
                    android:paddingRight="@dimen/px45">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3px"
                        android:text="账号"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/px32" />

                    <EditText
                        android:id="@+id/sign_in_userName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px100"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textColor="@color/black6"
                        android:textColorHint="@color/black9"
                        android:textSize="@dimen/px32" />


                    <ImageView
                        android:id="@+id/sign_in_userName_del"
                        android:layout_width="76px"
                        android:layout_height="76px"
                        android:padding="23px"
                        android:src="@mipmap/sign_in_del" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px45"
                    android:layout_marginRight="@dimen/px45"
                    android:background="#dadada" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px96"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px45"
                    android:paddingRight="@dimen/px45">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3px"
                        android:text="密码"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/px32" />

                    <EditText
                        android:id="@+id/sign_in_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px100"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/black6"
                        android:textColorHint="@color/black9"
                        android:textSize="@dimen/px32" />


                    <ImageView
                        android:id="@+id/sign_in_password_del"
                        android:layout_width="76px"
                        android:layout_height="76px"
                        android:padding="23px"
                        android:src="@mipmap/sign_in_del" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px45"
                    android:layout_marginRight="@dimen/px45"
                    android:background="#dadada" />


                <Button
                    android:id="@+id/sign_in_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px88"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/px45"
                    android:layout_marginRight="@dimen/px45"
                    android:layout_marginTop="@dimen/px76"
                    android:background="@drawable/bg_login_selector"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px36" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px48"
                android:layout_marginLeft="@dimen/px20"
                android:layout_marginRight="20px">

                <TextView
                    android:id="@+id/sign_in_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px25"
                    android:text="快速注册"
                    android:textColor="@color/black6"
                    android:textSize="@dimen/px30" />

                <TextView
                    android:id="@+id/sign_in_loss_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/px25"
                    android:text="忘记密码"
                    android:textColor="@color/black6"
                    android:textSize="@dimen/px30" />

            </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
