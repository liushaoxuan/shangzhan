<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_metting_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_ec"
    tools:context="com.wyu.iwork.view.activity.MettingDetailActivity">
    <include layout="@layout/layout_erp_edit_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/px88"
        android:background="@color/white"
        android:paddingTop="@dimen/px20"
        android:paddingBottom="@dimen/px20"
        android:paddingLeft="@dimen/px25"
        android:paddingRight="@dimen/px26">
        <TextView
            android:id="@+id/activity_metting_detail_adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议地点"
            android:textSize="@dimen/px32"
            android:textColor="@color/black3"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/activity_metting_detail_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color4D7186"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/px32"
            android:gravity="right"
            android:layout_toRightOf="@id/activity_metting_detail_adr"
            android:layout_marginLeft="@dimen/px20"
            android:text=""/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:background="@color/white"
        android:paddingLeft="@dimen/px25"
        android:layout_marginTop="@dimen/px1"
        android:paddingRight="@dimen/px26">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议时间"
            android:textSize="@dimen/px32"
            android:textColor="@color/black3"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/activity_metting_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color4D7186"
            android:layout_centerVertical="true"
            android:textSize="@dimen/px32"
            android:layout_alignParentRight="true"
            android:text=""/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="430px"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px1"
        android:paddingLeft="@dimen/px25"
        android:paddingRight="@dimen/px26"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议内容"
            android:layout_marginTop="@dimen/px50"
            android:textSize="@dimen/px32"
            android:textColor="@color/black3"/>

        <TextView
            android:id="@+id/activity_metting_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color4D7186"
            android:layout_marginTop="@dimen/px30"
            android:textSize="@dimen/px30"
            android:text=""/>
    </LinearLayout>

</LinearLayout>
