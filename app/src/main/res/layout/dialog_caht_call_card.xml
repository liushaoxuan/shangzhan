<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px350"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_40dp"
            android:paddingTop="@dimen/px20"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/dialog_chart_call_card_cahrt"
                android:layout_width="@dimen/head_40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="104px"
                    android:layout_height="104px"
                    android:src="@mipmap/dialog_chart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px26"
                    android:textColor="@color/black3"
                    android:layout_marginTop="@dimen/px25"
                    android:text="会话"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_chart_call_card_call"
                android:layout_width="@dimen/head_40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="104px"
                    android:layout_height="104px"
                    android:src="@mipmap/dialog_call"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px26"
                    android:textColor="@color/black3"
                    android:layout_marginTop="@dimen/px25"
                    android:text="电话"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/dialog_chart_call_card_card"
                android:layout_width="@dimen/head_40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="104px"
                    android:layout_height="104px"
                    android:src="@mipmap/dialog_card"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px26"
                    android:textColor="@color/black3"
                    android:layout_marginTop="@dimen/px25"
                    android:text="名片"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/blackb4"/>

        <TextView
            android:id="@+id/dialog_chart_call_card_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:text="取消"
            android:textSize="@dimen/px30"
            android:gravity="center"
            android:textColor="@color/black7"/>

    </LinearLayout>
</LinearLayout>
