<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crm_contract_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.CrmContractDetailActivity">

    <include layout="@layout/custom_back_toolbar"/>

    <ScrollView
        android:id="@+id/contract_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_custom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/contract_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/contract_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:gravity="center"
                android:layout_marginTop="106px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginBottom="166px"
                android:padding="28px"
                android:textSize="36px"
                android:textColor="@color/white"
                android:background="@drawable/bg_257eff_round_rect"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
