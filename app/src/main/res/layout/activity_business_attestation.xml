<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_business_attestation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyu.iwork.view.activity.BusinessAttestationActivity">

    <include layout="@layout/custom_back_toolbar"/>
    <ScrollView
        android:id="@+id/activity_business_attestation_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"/>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_passport_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingTop="16px"
                android:paddingLeft="30px"
                android:paddingBottom="40px">
                
                <ImageView
                    android:id="@+id/business_attestation_add_picture"
                    android:layout_marginRight="50px"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:src="@mipmap/pic_add"/>

                <ImageView
                    android:id="@+id/business_attestation_picture"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    />
                
            </com.zhy.autolayout.AutoLinearLayout>

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                />

            <com.wyu.iwork.widget.CustomCrmItem
                android:id="@+id/business_attestation_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/business_attestation_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:gravity="center"
                android:padding="28px"
                android:textSize="36px"
                android:textColor="@color/white"
                android:background="@drawable/bg_blue_round_rectangle"
                android:layout_marginTop="93px"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"/>
        </com.zhy.autolayout.AutoLinearLayout>
        
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
