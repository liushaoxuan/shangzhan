<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="23px">

    <include layout="@layout/layout_bottom_line_dfeaf1"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/task_avatar"
                android:layout_width="72px"
                android:layout_height="72px"
                android:background="@drawable/bg_25b0ff_30px"
                android:layout_marginTop="25px"
                android:layout_marginLeft="24px"
                android:text=""
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="36px"
                />

            <TextView
                android:id="@+id/task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorGray333333"
                android:textSize="30px"
                android:paddingTop="28px"
                android:paddingLeft="25px"
                android:layout_toRightOf="@id/task_avatar"/>

            <TextView
                android:id="@+id/task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorGray999999"
                android:textSize="24px"
                android:layout_toRightOf="@id/task_avatar"
                android:layout_below="@id/task_name"
                android:paddingTop="8px"
                android:paddingLeft="25px"/>

            <TextView
                android:id="@+id/task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执行中"
                android:textSize="26px"
                android:textColor="@color/color25b0ff"
                android:paddingTop="9px"
                android:paddingBottom="9px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:background="@drawable/bg_25b0ff_round_30px_1px"
                android:layout_alignParentRight="true"
                android:layout_marginTop="37px"
                android:layout_marginRight="60px"/>

            <TextView
                android:id="@+id/task_content"
                android:layout_below="@id/task_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="121px"
                android:paddingRight="62px"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/colorGray333333"
                android:textSize="32px"
                android:paddingTop="45px"
                android:paddingBottom="50px"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/layout_bottom_line_dfeaf1"/>

        <TextView
            android:id="@+id/task_check_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:gravity="center"
            android:paddingTop="24px"
            android:paddingBottom="21px"
            android:textSize="30px"
            android:textColor="@color/colorGray9FABB2"
            />

        <include layout="@layout/layout_bottom_line_dfeaf1"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>