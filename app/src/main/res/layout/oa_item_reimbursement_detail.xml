<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/oa_item_reimbursement_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px63"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/oa_item_reimbursement_detail_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/px24"
        android:textColor="@color/black96"
        android:text="飞机票 "/>

    <View
        android:layout_width="@dimen/px1"
        android:layout_height="match_parent"
        android:background="@color/colorGrayDFEBF1"/>
        <TextView
            android:id="@+id/oa_item_reimbursement_detail_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/px24"
            android:textColor="@color/black96"
            android:text="2017年4月28日 "/>
    <View
        android:layout_width="@dimen/px1"
        android:layout_height="match_parent"
        android:background="@color/colorGrayDFEBF1"/>
        <TextView
            android:id="@+id/oa_item_reimbursement_detail_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/px24"
            android:textColor="@color/black96"
            android:text="320元 "/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/colorGrayDFEBF1"/>
</LinearLayout>
