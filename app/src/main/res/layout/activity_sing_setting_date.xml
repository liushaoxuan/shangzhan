<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sing_setting_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wyu.iwork.view.activity.SingSettingDateActivity"
    android:background="@color/colorF4F9FC"
    android:orientation="vertical">

    <include layout="@layout/custom_back_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="23px"
                android:background="@drawable/bg_10px_rect_white_dfebf1">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="7px"
                        android:layout_height="31px"
                        android:background="@color/color25b0ff"
                        android:layout_marginLeft="3px"
                        android:layout_marginTop="30px"
                        android:layout_marginBottom="30px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="请选择您要设置的日期"
                        android:paddingLeft="17px"
                        android:textSize="30px"
                        android:textColor="@color/colorGray515151"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/Tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/Wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/Thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/Friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/Saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.wyu.iwork.widget.WeekItem
                    android:id="@+id/Sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_25b0ff_30px"
                android:layout_margin="113px"
                android:text="完成"
                android:gravity="center"
                android:textSize="30px"
                android:textColor="@color/colorFEFEFE"
                android:paddingTop="24px"
                android:paddingBottom="24px"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
