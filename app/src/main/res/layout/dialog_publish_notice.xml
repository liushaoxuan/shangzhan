<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_white_round_rectangle"
    >


    <TextView
        android:layout_height="90px"
        android:layout_width="match_parent"
        android:text="温馨提示"
        android:gravity="center"
        android:background="@color/colorGreen2A9FFB"
        android:textColor="@color/white"
        android:textSize="36px"/>

    <TextView
        android:gravity="center"
        android:text="确定发布此公告？"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorGray505050"
        android:layout_marginTop="86px"
        android:layout_marginBottom="74px"/>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/colorGrayDCDCDC"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="@color/colorGreen5397FF"
            android:layout_marginTop="32px"
            android:layout_marginBottom="32px"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="1px"
            android:background="@color/colorGrayDCDCDC"/>

        <TextView
            android:id="@+id/tv_cancelable"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="@color/colorGray969696"
            android:layout_marginTop="32px"
            android:layout_marginBottom="32px"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>