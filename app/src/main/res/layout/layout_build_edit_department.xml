<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_ec"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:paddingLeft="@dimen/px34"
        android:paddingRight="@dimen/px30"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px30"
            android:textColor="@color/black6"
            android:text="部门名称"/>

        <EditText
            android:id="@+id/department_build_edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px36"
            android:hint="请输入部门名称"
            android:paddingLeft="@dimen/px20"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:background="@null"
            android:textSize="@dimen/px28"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:paddingLeft="@dimen/px34"
        android:paddingRight="@dimen/px30"
        android:layout_marginTop="@dimen/px1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px30"
            android:textColor="@color/black6"
            android:layout_centerVertical="true"
            android:text="上级名称"/>


     <LinearLayout
         android:id="@+id/layout_build_edit_department_choseLayout"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:gravity="center_vertical">
         <TextView
             android:id="@+id/layout_build_edit_department_parent_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/px30"
             android:textColor="@color/black_9FABB2"
             android:text="请选择"/>

         <ImageView
             android:layout_width="@dimen/px17"
             android:layout_height="@dimen/px30"
             android:layout_marginLeft="@dimen/px15"
             android:src="@mipmap/right_arow"/>
     </LinearLayout>
    </RelativeLayout>


</LinearLayout>
