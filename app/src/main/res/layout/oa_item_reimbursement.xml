<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/oa_item_reimbursement_"
    android:background="@color/bg_ec"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px24"/>
        <RelativeLayout
            android:id="@+id/oa_item_reimbursement_position_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px88">
            <TextView
                android:id="@+id/oa_item_reimbursement_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px26"
                android:textColor="@color/black9"
                android:layout_marginLeft="@dimen/px25"
                android:text="报销明细01"/>

            <TextView
                android:id="@+id/oa_item_reimbursement_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px26"
                android:textColor="@color/oa_cuiban_chexiao"
                android:background="@drawable/oa_blue_side_5px_round"
                android:paddingTop="@dimen/px8"
                android:paddingBottom="@dimen/px8"
                android:paddingLeft="@dimen/px22"
                android:paddingRight="@dimen/px22"
                android:layout_marginLeft="@dimen/px25"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px24"
                android:text="删除"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.wyu.iwork.widget.CustomeViewGroup
        android:id="@+id/oa_item_reimbursement_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px97"
        app:NameColor="@color/black41"
        app:NameText="费用类型"
        app:RightTextSize="@dimen/px30"
        app:ShowLine="false"
        app:NameSize="@dimen/px32"
        app:RightTextColor="@color/black9"
        app:StarColor="@color/text_red"
        app:StarSize="@dimen/px30"
        app:RightText="请选择"/>
    <com.wyu.iwork.widget.CustomeViewGroup
        android:id="@+id/oa_item_reimbursement_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px97"
        android:layout_marginTop="@dimen/px1"
        app:NameColor="@color/black41"
        app:NameText="发生时间"
        app:RightTextSize="@dimen/px30"
        app:ShowLine="false"
        app:NameSize="@dimen/px32"
        app:RightTextColor="@color/black9"
        app:StarColor="@color/text_red"
        app:StarSize="@dimen/px30"
        app:RightText="请选择"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px97"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black41"
            android:text="费用金额"
            android:layout_marginLeft="@dimen/px26"
            android:textSize="@dimen/px32"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:text="*"
            android:textSize="@dimen/px36"/>

        <EditText
            android:id="@+id/oa_item_reimbursement_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px30"
            android:minWidth="@dimen/px150"
            android:hint="请输入"
            android:gravity="right|center"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:layout_marginRight="@dimen/px26"
            android:textColorHint="@color/black9"
            android:textSize="@dimen/px30"
            android:textColor="@color/black9"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px1"
        android:paddingBottom="@dimen/px30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/oa_apply_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px32"
                android:textColor="@color/black3"
                android:layout_marginLeft="@dimen/px24"
                android:text="费用说明"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px36"
                android:layout_marginTop="@dimen/px2"
                android:textColor="@color/text_red"
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/px2"
                android:text="*"/>

        </LinearLayout>

        <EditText
            android:id="@+id/oa_item_reimbursement_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px185"
            android:layout_marginLeft="@dimen/px30"
            android:hint="请输入费用说明(60字以内)"
            android:paddingTop="@dimen/px10"
            android:gravity="top"
            android:maxLength="60"
            android:textSize="@dimen/px30"
            android:textColor="@color/black6"
            android:layout_marginRight="@dimen/px30"
            android:background="@null"
            android:layout_marginBottom="@dimen/px26"/>
        <TextView
            android:id="@+id/oa_item_reimbursement_input_size"
            android:layout_width="match_parent"
            android:gravity="right"
            android:paddingRight="@dimen/px30"
            android:layout_height="wrap_content"
            android:textColor="@color/black9"
            android:textSize="@dimen/px30"
            android:text="0/60"/>

        <LinearLayout
            android:id="@+id/oa_item_reimbursement_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px6"
            android:paddingBottom="@dimen/px6"
            android:layout_marginTop="@dimen/px30"
            android:background="@drawable/oa_blue_side_5px_round">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/oa_light_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加明细"
                android:layout_marginLeft="@dimen/px10"
                android:textSize="@dimen/px32"
                android:textColor="@color/oa_light_blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
